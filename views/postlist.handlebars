<div class="container border">
    <div class="row border-bottom" style="height: 80px">
        <button onclick="window.location.href= '/'" style="height: fit-content; margin: 3px">Start Page</button>
        <div class="col my-4 text-center">
            <h3>Post List</h3>
        </div>
    </div>

    {{#each posts}}

    <div class="container">
        <div class="row border-bottom">
            <div class="col-8">
                <div class="text-left">
                    <a href="/posts?id={{id}}"><h4>{{title}}</h4>(Author: {{author}})</a>
                </div>
            </div>
            <div class="col-4">
                <div class="text-right">Datum: {{created_at}}</div>
            </div>
        </div>
    </div>

    {{/each}}

</div>




